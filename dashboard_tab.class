class Dashboard
{
   function __construct()
   {
	//echo 'hi!';
   }

   // How about making a generic Tab class and extending that to create specific tabs and setting properties to add things to the toolbar?
   function displayTab()
   {
      session_write_close();

      $htmlString = '';

      $htmlString .= "<div class='tab' id='dashboard'> <a href='#dashboard'> Dashboard </a>";
      $htmlString .= "	<div class='container' style='display: flex; flex-direction: column; width: 100%;'>";
      $htmlString .= "		<div class='tab-toolbar'>";
      $htmlString .= '			<input type="button" onClick="javascript: update( \'conditions\' );" value="Refresh">';
      $htmlString .= "			Present conditions";
      $htmlString .= "		</div>";

      $htmlString .= "	  	    <div style='font-size: .5em; line-height: 1em; display: flex; flex: 1; flex-direction: row;border: 3px solid black; overflow: hidden' >";
      // Give user a button to refresh whenever they want.
      $htmlString .= "			<div id='status'   class='dashboard status' ></div>";
      $htmlString .= "			<div id='forecast' class='dashboard forecast'></div>";

      // Kick off dashboard refresh timers when it loads
      $htmlString .= "			<script>";
      $htmlString .= "				update( \"conditions\" );";
      $htmlString .= "				update( \"forecast\" );";
      $htmlString .= "			</script>";

      $htmlString .= "		   </div>";
      $htmlString .= "	</div>";
      $htmlString .= "</div>";
      $htmlString .= "<div class='tab_gap'></div>";

      echo $htmlString;
   }
}
